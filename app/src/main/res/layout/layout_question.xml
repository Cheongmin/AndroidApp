<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_question"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_question_title"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorGray9"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_user_name" />

    <TextView
        android:id="@+id/tv_question_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorGray7"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_title" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_question_user_profile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_question_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_question_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="사용자 이름"
        android:textColor="@color/colorGray7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_question_user_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="위치"
        android:textColor="@color/colorGray6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_question_user_name"
        app:layout_constraintStart_toEndOf="@+id/tv_question_user_name"
        app:layout_constraintTop_toTopOf="@+id/tv_question_user_name" />

    <TextView
        android:id="@+id/tv_question_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="어제"
        android:textColor="@color/colorGray6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_question_user_location"
        app:layout_constraintStart_toEndOf="@+id/tv_question_user_location"
        app:layout_constraintTop_toTopOf="@+id/tv_question_user_location"
        app:layout_constraintVertical_bias="0.625" />

    <ImageView
        android:id="@+id/iv_question_answers_count"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_chat_bubble_outline_black_24dp"
        app:layout_constraintStart_toStartOf="@+id/tv_question_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_question_content" />

    <TextView
        android:id="@+id/tv_question_answers_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="2dp"
        android:text="0"
        android:textColor="@color/colorGray9"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_question_answers_count"
        app:layout_constraintStart_toEndOf="@+id/iv_question_answers_count"
        app:layout_constraintTop_toTopOf="@+id/iv_question_answers_count" />

</android.support.constraint.ConstraintLayout>